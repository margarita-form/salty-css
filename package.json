{
  "name": "@salty-css/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "pretty": "prettier --write .",
    "dev:react-testing": "nx run react-testing:serve",
    "build:core": "nx run core:build",
    "build:react": "nx run react:build",
    "build:vite": "nx run vite:build",
    "build:webpack": "nx run webpack:build",
    "build:eslint-plugin-core": "nx run eslint-plugin-core:build",
    "build:all": "nx run-many --target=build --projects core react vite webpack eslint-plugin-core",
    "publish:core": "cd libs/core/dist && npm publish",
    "publish:react": "cd libs/react/dist && npm publish",
    "publish:vite": "cd libs/vite/dist && npm publish",
    "publish:webpack": "cd libs/webpack/dist && npm publish",
    "publish:eslint-plugin-core": "cd libs/eslint-plugin-core/dist && npm publish",
    "publish:all-dev": "npm run build:all && lerna version --force-publish -m \"chore(release-dev): version %v\" && npm run build:all && npm run publish:core --tag dev && npm run publish:react --tag dev && npm run publish:vite --tag dev && npm run publish:webpack --tag dev && npm run publish:eslint-plugin-core --tag dev"
  },
  "private": true,
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/eslint": "20.1.2",
    "@nx/eslint-plugin": "20.1.2",
    "@nx/js": "20.1.2",
    "@nx/react": "20.1.2",
    "@nx/vite": "20.1.2",
    "@nx/web": "20.1.2",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "18.16.9",
    "@types/react": "^18.3.12",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.3.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "5.0.0",
    "jsdom": "~22.1.0",
    "lerna": "^8.1.9",
    "nx": "20.1.2",
    "prettier": "^2.6.2",
    "tslib": "^2.3.0",
    "typescript": "~5.5.2",
    "typescript-eslint": "^8.0.0",
    "verdaccio": "^5.0.4",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^1.3.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "winston": "^3.15.0"
  },
  "nx": {
    "includedScripts": [],
    "targets": {
      "local-registry": {
        "executor": "@nx/js:verdaccio",
        "options": {
          "port": 4873,
          "config": ".verdaccio/config.yml",
          "storage": "tmp/local-registry/storage"
        }
      }
    }
  }
}
