---
import '../saltygen/index.css';
import { Button, Container, justClass, RandomValue, CyanContainer, UrlBox, Wrapper, DifferentElement } from '../components/wrapper.css';

Astro.locals.random = Math.random();

const cyanClass = justClass.variant('color', 'cyan');
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <Wrapper> Wrapper works </Wrapper>
    <Container> Container too </Container>
    <CyanContainer> Cyan Container works </CyanContainer>
    <Button text="link to google" href="https://www.google.com" />
    <UrlBox />
    <RandomValue />
    <div class={justClass}>Just class works</div>
    <div class={cyanClass}>Cyan class works</div>
    <DifferentElement> Different Element works </DifferentElement>
    <DifferentElement element="div"> Different Element as div works </DifferentElement>
  </body>
</html>
